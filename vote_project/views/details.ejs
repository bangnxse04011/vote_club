<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>
        <%= title %>
    </title>

    <!-- Bootstrap core CSS -->
    <link rel="icon" href="/icon.ico">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'
        rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic'
        rel='stylesheet' type='text/css'>

    <!-- Plugin CSS -->
    <link href="/vendor/magnific-popup/magnific-popup.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/creative.min.css" rel="stylesheet">
    <div id="fb-root"></div>
    <script>
        (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.12&appId=418017485293597&autoLogAppEvents=1';
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: white;" id="mainNav">
        <div class="container">
            <a style="color : #f05f40" class="navbar-brand js-scroll-trigger" href="#page-top">Mic On</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class="">
                            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên">
                        </div>
                    </li>
                    <li class="nav-item" style="margin-left:1em;margin-right:1em;">
                        <button type="submit" class="btn btn-default">Search</button>
                    </li>
                    <li class="nav-item">
                        <a style="color : black !important" class="nav-link js-scroll-trigger" href="#about">Giới Thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a style="color : black !important" class="nav-link js-scroll-trigger" href="#services">Nhà Tài Trợ</a>
                    </li>
                    <li class="nav-item">
                        <a style="color : black !important" class="nav-link js-scroll-trigger" href="#portfolio">Video</a>
                    </li>
                    <li class="nav-item">
                        <a style="color : black !important" class="nav-link js-scroll-trigger" href=<%=link_login_or_logout %>>
                            <%= user_name %>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:5%">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="row rowsecond">
                    <iframe width="100%" height="80%" src="https://www.youtube.com/embed/<%= user_profile_video_view.link_video %>" frameborder="0" allow=" encrypted-media" allowfullscreen></iframe>
                </div>
                <div class="row rowsecond">
                    <h1>
                        <span><%= user_profile_video_view.full_name %></span>
                        <div class="fb-share-button" data-href="http://192.168.118.22:3000/details/<%= user_profile_video_view.id %>" data-layout="button_count" data-size="large" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>
                    </h1>
                </div>
                <div class="row rowsecond">
                    <span><%= user_profile_video_view.description %></span>
                </div>
            </div>
            <div class="col-xs-6 col-md-4">
                <% data_video_array.forEach(function(data_video) { %>
                    <div class="row rowsecond">
                        <div class="col-xs-6 col-md-6">
                                <a href="/details/<%= data_video.id %>">
                                <img src="https://img.youtube.com/vi/<%= data_video.link_video %>/default.jpg" alt="Smiley face" height="auto" width="100%">
                            </a>
                        </div>
                        <div class="col-xs-6 col-md-6" style="line-height:200%;">
                            <a href="/details/<%= data_video.id %>">
                                <span><%= data_video.full_name %></span>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <!-- ADD comment to facebok -->
    <div class="container" style="margin-top:5%">
        <div class="fb-comments" data-href="http://192.168.118.22:3000/details/<%= user_profile_video_view.id %>" data-width="700" data-numposts="5"></div>
    </div>
    <!----------------------------------------------------------->
</body>

</html>