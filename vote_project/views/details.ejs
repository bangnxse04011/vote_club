                            <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fmiconshow.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Chia sẻ</a>
                        </div>
                    </div>
                </div>
                <div class=" row rowsecond container" style="margin-top:5%">
                    <div class="fb-comments" data-href="https://miconshow.com/details/<%= user_profile_video_view.id %>" data-width="700" data-numposts="5"></div>
                </div>
            </div>
            <div class="col-xs-6 col-md-4">
                <% data_video_array.forEach(function(data_video) { %>
                    <div class="row rowsecond">
                        <div class="col-xs-6 col-md-6">
                            <a href="/details/<%= data_video.id %>">
                                <img src="https://img.youtube.com/vi/<%= data_video.link_video %>/default.jpg" alt="Smiley face" height="auto" width="100%">
                            </a>
                        </div>
                        <div class="col-xs-6 col-md-6" style="line-height:200%;">
                            <a href="/details/<%= data_video.id %>">
                                <span>
                                    <%= data_video.full_name %>
                                </span>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
