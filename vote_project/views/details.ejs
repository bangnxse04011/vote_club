    <div class="container" style="margin-top:5%">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="row rowsecond">
                    <iframe width="100%" height="80%" src="https://www.youtube.com/embed/<%= user_profile_video_view.link_video %>?modestbranding=1&autohide=1&showinfo=0&controls=1"
                        frameborder="0" allow=" encrypted-media" allowfullscreen></iframe>
                </div>
                <div class="row rowsecond">
                    <h1>
                        <span>
                            <%= user_profile_video_view.full_name %>
                        </span>
                    </h1>
                </div>
                <div class="row rowsecond">
                    <span>
                        <%= user_profile_video_view.description %>
                    </span>
                </div>
                <div class="row rowsecond" style="height: 3%;">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-md-3">
                        <img src="<%= link_avata_button_like %>" alt="Like" height="100%">
