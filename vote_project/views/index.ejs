        </div>
      </div>
    </div>
  </section>

  <!--------------------------------------------------- -->

  <!-- Introduction about NTT -->
  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">Nhà Tài Trợ</h2>
          <hr class="my-4">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box mt-5 mx-auto">
            <div class="fa fa-4x  text-primary mb-3 sr-icons">
                <img src="\img\th.png" alt="Smiley face" height="100" width="100">
            </div>
            <h3 class="mb-3">TH True Milk</h3>
           
          </div>
        </div>
       
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box mt-5 mx-auto">
              <div class="fa fa-4x  text-primary mb-3 sr-icons">
                  <img src="\img\fpt.jpg" alt="Smiley face" height="100" width="100">
              </div>
